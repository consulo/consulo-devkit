<idea-plugin>
	<extensions defaultExtensionNs="org.consulo.lombok">
		<processor annotationClass="consulo.lombok.annotations.Logger" implementationClass="consulo.lombok.devkit.processor.impl.IdeaLoggerAnnotationProcessor"/>
		<processor annotationClass="consulo.lombok.annotations.ModuleService" implementationClass="consulo.lombok.devkit.processor.impl.ModuleServiceAnnotationProcessor"/>
		<processor annotationClass="consulo.lombok.annotations.ProjectService" implementationClass="consulo.lombok.devkit.processor.impl.ProjectServiceAnnotationProcessor"/>
		<processor annotationClass="consulo.lombok.annotations.ApplicationService" implementationClass="consulo.lombok.devkit.processor.impl.ApplicationServiceAnnotationProcessor"/>
		<processor annotationClass="consulo.lombok.annotations.ArrayFactoryFields" implementationClass="consulo.lombok.devkit.processor.impl.ArrayFactoryFieldsAnnotationProcessor"/>
		<processor annotationClass="consulo.lombok.annotations.Bundle" implementationClass="consulo.lombok.devkit.processor.impl.BundleAnnotationProcessor"/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<codeInsight.lineMarkerProvider language="JAVA"
										implementationClass="consulo.lombok.devkit.navigation.BundleItemLineMarkerProvider" />
	</extensions>
</idea-plugin>